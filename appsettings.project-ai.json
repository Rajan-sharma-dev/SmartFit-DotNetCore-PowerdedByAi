{
  "ConnectionStrings": {
    "DefaultConnection": "Your connection string here"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-that-should-be-very-long-and-secure",
    "Issuer": "ProjectManagementApp",
    "Audience": "ProjectUsers",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30
  },
  "OpenAi": {
    "ApiKey": "sk-your-openai-api-key-here",
    "BaseUrl": "https://api.openai.com/v1",
    "DefaultModel": "gpt-3.5-turbo",
    "MaxTokens": 1500,
    "Temperature": 0.7,
    "TopP": 1.0,
    "TimeoutSeconds": 30,
    "EnableStreaming": true,
    "EnableModeration": true,
    "RequestsPerMinute": 60,
    "RequestsPerDay": 1000,
    "EnablePersonalization": true,
    "EnableCodeAnalysis": true,
    "DefaultProjectContext": "You are a senior project manager and technical lead with expertise in software development, Agile methodologies, Jira, Azure DevOps, and team productivity optimization."
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MiddleWareWebApi.Services.OpenAiProjectService": "Information"
    }
  },
  "AllowedHosts": "*"
}