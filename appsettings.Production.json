{
  "ConnectionStrings": {
    "DefaultConnection": "#{DATABASE_CONNECTION_STRING}#"
  },
  "JwtSettings": {
    "SecretKey": "#{JWT_SECRET_KEY}#",
    "Issuer": "#{JWT_ISSUER}#",
    "Audience": "#{JWT_AUDIENCE}#",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "OpenAi": {
    "ApiKey": "#{OPENAI_API_KEY}#",
    "BaseUrl": "https://api.openai.com/v1",
    "DefaultModel": "gpt-4o-mini",
    "ImageModel": "gpt-4-vision-preview",
    "MaxTokens": 1500,
    "Temperature": 0.7,
    "TopP": 1.0,
    "TimeoutSeconds": 30,
    "EnableStreaming": true,
    "EnableModeration": true,
    "RequestsPerMinute": 60,
    "RequestsPerDay": 1000,
    "EnablePersonalization": true,
    "EnableCodeAnalysis": true,
    "DefaultProjectContext": "SmartTask AI Assistant - Intelligent task management system with natural language processing and conversation context"
  },
  "SmartTaskSettings": {
    "ApplicationName": "SmartTask AI Assistant",
    "Version": "1.0.0",
    "Environment": "Production",
    "Features": {
      "EnableChatHistory": true,
      "EnableAITaskResolution": true,
      "EnableProactiveAssistance": true,
      "MaxChatHistoryDays": 30,
      "MaxTasksPerUser": 1000
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SmartTask.AI.Api": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "#{APPINSIGHTS_CONNECTION_STRING}#"
  },
  "AllowedHosts": "*"
}