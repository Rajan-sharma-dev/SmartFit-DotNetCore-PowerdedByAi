{
  "ConnectionStrings": {
    "DefaultConnection": "#{STAGING_DATABASE_CONNECTION_STRING}#"
  },
  "JwtSettings": {
    "SecretKey": "#{STAGING_JWT_SECRET_KEY}#",
    "Issuer": "SmartTaskAI-Staging",
    "Audience": "SmartTaskAI-Users-Staging",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "OpenAi": {
    "ApiKey": "#{STAGING_OPENAI_API_KEY}#",
    "BaseUrl": "https://api.openai.com/v1",
    "DefaultModel": "gpt-4o-mini",
    "ImageModel": "gpt-4-vision-preview",
    "MaxTokens": 1500,
    "Temperature": 0.7,
    "TopP": 1.0,
    "TimeoutSeconds": 30,
    "EnableStreaming": true,
    "EnableModeration": true,
    "RequestsPerMinute": 30,
    "RequestsPerDay": 500,
    "EnablePersonalization": true,
    "EnableCodeAnalysis": true,
    "DefaultProjectContext": "SmartTask AI Assistant - STAGING - Intelligent task management system"
  },
  "SmartTaskSettings": {
    "ApplicationName": "SmartTask AI Assistant (Staging)",
    "Version": "1.0.0",
    "Environment": "Staging",
    "Features": {
      "EnableChatHistory": true,
      "EnableAITaskResolution": true,
      "EnableProactiveAssistance": true,
      "MaxChatHistoryDays": 7,
      "MaxTasksPerUser": 100
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "SmartTask.AI.Api": "Debug"
    }
  },
  "AllowedHosts": "*"
}